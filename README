
// MUST be packed to disallow 4 byte alignment
struct block_metadata {
	uint16_t ref_count;
	uint8_t config_index;
};


cmalloc(idx):
	1. find a slot of length configs[idx].len + 2 bytes for refcount + 1 byte for config_index (3bytes for block_metadata)
	2. increment refcount by 1
	3. return (slot_address + 3)

get(ptr):
	1. *((uint16_t *)(ptr - 2)) += 1;

put(ptr):
	1. ref_count = *((uint16_t *)(ptr - 2))
	2. ref_count -= 1;
	3. if ref_count == 0

